{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist/apps/gateway",
    "baseUrl": "./",
    "paths": {
      "@@gateway/*": [
        "apps/gateway/src/*"
      ],
      "@@review/*": [
        "apps/reviews/src/*"
      ],
      "@@shared/*": [
        "libs/shared/src/*"
      ],
      "@@users/*": [
        "apps/users/src/*"
      ],
      "@@movies/*": [
        "apps/movie-db/src/*"
      ],
      "@core/*": [
        "apps/gateway/src/core/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
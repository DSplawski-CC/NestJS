generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email  String   @id @unique
  name   String
  Review Review[] @relation("author")
}

model Review {
  id        Int      @id @default(autoincrement())
  movieId   Int
  email     String
  content   String
  createdAt DateTime @default(now())
  rating    Float
  title     String
  user      User     @relation("author", fields: [email], references: [email])

  @@unique([email, movieId])
  @@index([movieId])
  @@index([createdAt])
}
